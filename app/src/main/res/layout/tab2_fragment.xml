<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/logobackground">

    <TextView
        android:id="@+id/welcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textStyle="bold|italic"
        android:text="Welcome to Study Buddy!"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/swipeLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/welcomeMessage"
        android:layout_below="@+id/welcomeMessage"
        android:layout_marginEnd="140dp"
        android:layout_marginTop="35dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:text="Swipe left to access the Pomodoro timer. Time yourself to see if you're ready for an upcoming midterm or exam." />

    <TextView
        android:id="@+id/swipeRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/swipeLeft"
        android:layout_alignBottom="@+id/swipeLeft"
        android:layout_alignStart="@+id/welcomeMessage"
        android:layout_marginStart="137dp"
        android:paddingLeft="18dp"
        android:paddingRight="20dp"
        android:text="Swipe right to find other students studying the same topic. Pin your location or chat with other students in the vicinity." />
